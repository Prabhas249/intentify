generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id                    String         @id @default(cuid())
  name                  String?
  email                 String?        @unique
  emailVerified         DateTime?
  image                 String?
  company               String?
  plan                  Plan           @default(FREE)
  razorpayCustomerId    String?
  visitorsUsedThisMonth Int            @default(0)
  billingCycleStart     DateTime?
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt
  accounts              Account[]
  sessions              Session[]
  subscriptions         Subscription[]
  websites              Website[]
}

model Subscription {
  id                     String             @id @default(cuid())
  userId                 String
  razorpaySubscriptionId String             @unique
  plan                   Plan
  status                 SubscriptionStatus
  currentPeriodStart     DateTime
  currentPeriodEnd       DateTime
  createdAt              DateTime           @default(now())
  updatedAt              DateTime           @updatedAt
  user                   User               @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Website {
  id        String     @id @default(cuid())
  userId    String
  domain    String
  scriptKey String     @unique @default(cuid())
  settings  Json       @default("{}")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  campaigns Campaign[]
  visitors  Visitor[]
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, domain])
}

model Campaign {
  id           String         @id @default(cuid())
  websiteId    String
  name         String
  popupType    PopupType      @default(MODAL)
  triggerRules Json
  content      Json
  status       CampaignStatus @default(ACTIVE)
  priority     Int            @default(5)
  frequency    FrequencyType  @default(ONCE_PER_SESSION)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  website      Website        @relation(fields: [websiteId], references: [id], onDelete: Cascade)
  events       Event[]
}

model Visitor {
  id                String      @id @default(cuid())
  websiteId         String
  visitorHash       String
  visitCount        Int         @default(1)
  pagesViewed       String[]    @default([])
  timeOnSiteSeconds Int         @default(0)
  utmSource         String?
  utmMedium         String?
  utmCampaign       String?
  referrer          String?
  intentScore       Int         @default(0)
  intentLevel       IntentLevel @default(LOW)
  scrollDepth       Int         @default(0)
  device            String?
  browser           String?
  os                String?
  country           String?
  city              String?
  firstSeen         DateTime    @default(now())
  lastSeen          DateTime    @default(now())
  countedForMonth   DateTime?
  events            Event[]
  website           Website     @relation(fields: [websiteId], references: [id], onDelete: Cascade)

  @@unique([websiteId, visitorHash])
  @@index([websiteId, lastSeen])
  @@index([websiteId, intentLevel])
}

model Event {
  id         String    @id @default(cuid())
  campaignId String?
  visitorId  String
  eventType  EventType
  metadata   Json?
  createdAt  DateTime  @default(now())
  campaign   Campaign? @relation(fields: [campaignId], references: [id])
  visitor    Visitor   @relation(fields: [visitorId], references: [id], onDelete: Cascade)

  @@index([campaignId, eventType])
  @@index([visitorId, createdAt])
}

model Lead {
  id         String   @id @default(cuid())
  websiteId  String
  email      String?
  phone      String?
  name       String?
  campaignId String?
  utmSource  String?
  pageUrl    String?
  metadata   Json?
  createdAt  DateTime @default(now())

  @@index([websiteId, createdAt])
}

enum Plan {
  FREE
  STARTER
  GROWTH
  PRO
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  PAST_DUE
  TRIALING
}

enum PopupType {
  MODAL
  SLIDE_IN
  BANNER
  FLOATING
  FULL_SCREEN
  BOTTOM_SHEET
}

enum CampaignStatus {
  ACTIVE
  PAUSED
  ARCHIVED
}

enum FrequencyType {
  EVERY_TIME
  ONCE_PER_SESSION
  ONCE_PER_DAY
  ONCE_PER_WEEK
  ONCE_EVER
}

enum IntentLevel {
  LOW
  MEDIUM
  HIGH
}

enum EventType {
  PAGE_VIEW
  POPUP_IMPRESSION
  POPUP_CLICK
  POPUP_CONVERSION
  POPUP_DISMISS
  LEAD_CAPTURED
  COUPON_COPY
}
